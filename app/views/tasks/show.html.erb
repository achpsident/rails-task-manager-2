
<div class = "title-bar">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-secondary" %>
 </div>
<div id = "details-card">
  <div class = "card" id = "details-card">
    <div class="card-body">
      <div>
        <p style="color:#161616;font-weight: bold"><%= @task.details %></p>
      </div>
    </div>
  </div>
</div>

<% if @task.completed %>
  <i class="far fa-check-square" id="checkbox"></i>This task is complete
<% else %>
  <i class="far fa-square" id = "checkbox"></i> This task is not complete
<% end %>



<div>
  <i class="fas fa-undo plain-link"></i>
  <%= link_to "Back to task list", tasks_path %>
</div>

